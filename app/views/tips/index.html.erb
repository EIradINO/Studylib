<h1>Tips</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.content %></td>
        <td><%= link_to 'Show', tip %></td>
        <% if user_signed_in? && current_user.id == tip.user_id %>
          <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
          <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tip', new_tip_path %>
