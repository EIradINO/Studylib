<div class="white_container">
  <h1>Tips</h1>

  <table>
    <thead>
      <tr>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tips.each do |tip| %>
        <tr>
          <%= render 'tip', tip: tip %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Tip', new_tip_path %>
</div>